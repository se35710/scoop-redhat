        }
    },
    "bin": "opm.exe",
    "installer": {
        "script": "Move-Item \"$dir\\windows-amd64-opm\" \"$dir\\opm.exe\""
    },
    "checkver": {
        "url": "https://mirror.openshift.com/pub/openshift-v4/clients/ocp/stable/release.txt",
        "regex": "Name:\\s+((?<release>[\\d.-]+))"
    },
    "autoupdate": {
        "architecture": {
